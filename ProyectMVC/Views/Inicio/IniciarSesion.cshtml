<!-- VIEW LOGIN  -->
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>IniciarSesion</title>

    <!-- Link de  Bootstrap  -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

</head>
<body style="background-image: url('../../img/img-documentos.jpg')">
    <section>
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-6 mb-5 text-center ">
                    <!-- Tu contenido aquí si es necesario -->
                </div>
            </div>

            <div class="row justify-content-center align-items-center mt-5">
                <div class="col-md-6 col-lg-4 mt-3">
                    <div class="login-wrap p-0">

                        <h1 class="text-center mb-4 fs-3">LOGIN</h1>

                        <form asp-controller="Inicio" asp-action="IniciarSesion" method="post">
                            <div class="form-group mt-5">
                                <i class="bi bi-circle-fill  small-icon text-success me-2  ms-1"></i>
                                <label  class="form-label fs-6" 
                                        for="form2Example1">
                                        <b>Username</b>
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       placeholder="Ingresa su usuario" 
                                       name="correo"/>

                                <div class="form-group mt-5" for="form2Example1">
                                    <i class="bi bi-circle-fill  small-icon text-success  me-2  ms-1"></i>
                                    <label class="form-label fs-6"><b>Password</b></label>
                                    <div class="row">
                                        <div class="col-12">
                                            <input  class="form-control" 
                                                    type="password" 
                                                    placeholder="Ingresa su contraseña" 
                                                    name="clave" />
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="form-group mt-5 text-center">
                                <button type="submit"
                                        class="btn btn-primary text-decoration-none">
                                  <i class="bi bi-person-circle fs-5 fw-bold me-2"></i>Iniciar Sesión
                                </button>
                            </div>

                            <div class="mt-4">
                                @if (ViewData["Mensaje"] != null)
                                {

                                    <div class="form-group">
                                        <div class="alert alert-danger" role="alert">
                                            @ViewData["Mensaje"]
                                        </div>
                                    </div>
                                }
                                <div class="text-center">
                                    ¿No tienes una cuenta? <a href="@Url.Action("Registrarse","Inicio")">Regístrate!</a>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </section>
</body>
</html>