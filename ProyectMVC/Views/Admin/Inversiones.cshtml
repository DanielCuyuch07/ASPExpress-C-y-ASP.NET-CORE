<!-- VIEW INVERSIONES  -->
@model List<ProyectMVC.Models.Inversione>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <!-- LINK BOOTSTRAP  -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- jQuery (es necesario para los modales de Bootstrap) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Bootstrap JS (asegúrate de incluirlo después de jQuery) -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <title>Inversiones</title>
</head>
<body>



    <!-- SWEETALERT MESSAGE  -->
    @section scripts {
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

        <script>
            $(document).ready(function () {
                $('.delete-form').submit(function (e) {
                    e.preventDefault(); // Evita que el formulario se envíe de forma predeterminada
                    var form = $(this);
                    Swal.fire({
                        title: '¿Estás seguro?',
                        text: '¡No podrás revertir esto!',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Sí, eliminarlo!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                type: form.attr('method'),
                                url: form.attr('action'), // Cambiado de 'asp-action' a 'action'
                                data: form.serialize(),
                                success: function (response) {
                                    if (response.success) {
                                        Swal.fire(
                                            'Eliminado!',
                                            response.message,
                                            'success'
                                        ).then((result) => {
                                            location.reload(); // Recarga la página después de eliminar
                                        });
                                    } else {
                                        Swal.fire(
                                            'Error!',
                                            response.message,
                                            'error'
                                        );
                                    }
                                },
                                error: function () {
                                    Swal.fire(
                                        'Error!',
                                        'Ha ocurrido un error al eliminar el Cliente.',
                                        'error'
                                    );
                                }
                            });
                        }
                    });
                });
            });
        </script>
        <script>
            $(document).ready(function () {
                $('.excelGenerate-form').submit(function (e) {
                    e.preventDefault(); // Evita que el formulario se envíe de forma predeterminada
                    var form = $(this);
                    Swal.fire({
                        title: '¿Estás seguro?',
                        text: '¡No podrás revertir esto!',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Sí, eliminarlo!'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            $.ajax({
                                type: form.attr('method'),
                                url: form.attr('action'), // Cambiado de 'asp-action' a 'action'
                                data: form.serialize(),
                                success: function (response) {
                                    if (response.success) {
                                        Swal.fire(
                                            'Eliminado!',
                                            response.message,
                                            'success'
                                        ).then((result) => {
                                            // Redirige a la URL del archivo descargado
                                            window.location.href = response.fileUrl;
                                        });
                                    } else {
                                        Swal.fire(
                                            'Error!',
                                            response.message,
                                            'error'
                                        );
                                    }
                                },
                                error: function (xhr, status, error) {
                                    Swal.fire(
                                        'Error!',
                                        'Ha ocurrido un error: ' + error,
                                        'error'
                                    );
                                }
                            });
                        }
                    });
                });
            });
        </script>
    }


<div class="mt-5">

     <div class="text-center">
            <h2 class="fs-3"><b>ENTITY INVERSION</b> </h2>

     </div>


        <!-- Estructura del modal -->
        <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">

            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title mt-3" id="exampleModalLabel">
                            <i class="bi bi-circle-fill me-2 ms-1  text-success"></i> Inversiones 
                        </h4>
                        <button type="button" class="close btn btn-link" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="row">
                                <div class="col-lg-11 ms-2 mt-1">
                                    <i class="bi bi-circle-fill text-success" style="font-size: 0.75rem;"></i>
                                    <label for="recipient-name" class="col-form-label">Inversiones</label>
                                    <input name="name" id="name" type="text" class="form-control form-control" placeholder="Ingrese la nueva inversion">
                                </div>
                            </div>
                        </form>

                        <div class="modal-footer d-flex justify-content-between mt-5">
                            <div class="mr-auto ">
                                <button type="button" class="btn btn-danger" placement="top">
                                    <a href=""><i class="bi bi-x-circle text-white"></i></a>
                                </button>


                            </div>
                            <button (click)="updateUsers()" type="button" class="btn btn-primary" data-toggle="tooltip"
                                    data-placement="top" data-original-title="Descargar">
                                <i class="bi bi-download text-white"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="me-5 text-center">
            <button type="button" class="btn btn-primary mt-5" data-toggle="modal" data-target=".bd-example-modal-lg">
                <i class="bi bi-plus fa-floppy-disk text-light"></i>
            </button>
        </div>


        <div class="d-flex justify-content-end me-5">
            <div class="me-5">
                <form method="get" asp-action="GenerarExcelInversiones" class="export-form excelGenerate-form">
                    <button type="submit" class="btn btn-primary mt-5 ">
                        <i class="bi bi-file-excel fa-floppy-disk text-light"></i>
                    </button>
                </form>
            </div>
            <div class="me-5">
                <form asp-action="DescargarPDFInversiones" method="post">
                    <button type="submit" class="btn btn-primary mt-5">
                        <i class="bi bi-file-pdf fa-floppy-disk text-light"></i>
                    </button>
                </form>

            </div>
        </div>



    <div class="container" style="padding: 70px;">
        <div class="container " style="text-align: center; justify-content: center;">

                <table class="table table-striped table-hover">

                <thead>
                    <tr>
                        <th scope="col">No</th>
                            <th scope="col" style="width: 800px;">Name Actions</th>
                        <th scope="col">Actions</th>

                    </tr>
                </thead>

                <tbody>
                   <tr>
                            @foreach(var inv in Model)
                            {
                            <tr>
                                <td>@inv.IdInversion</td>
                                <td>@inv.NombreInversion</td>
                                <td>
                                    <div class="d-flex justify-content-center  ms-3">
                                        <form method="post" asp-action="DeleteInversiones" class="delete-form ">
                                            <input type="hidden" name="IdInversion" value="@inv.IdInversion" />
                                            <button type="submit" class="btn btn-outline-info btn-sm">
                                                <i class="bi bi-trash3 text-dark"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            }
                    <tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>
